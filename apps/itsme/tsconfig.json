{
  "extends": "@algoroot/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
      // "@/*": ["./modules/*"]
      // "@codekit/ui/*": ["../../../packages/ui/src/*"]
      // "@common/*": ["../../../packages/common/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
